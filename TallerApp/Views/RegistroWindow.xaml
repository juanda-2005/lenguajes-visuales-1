<Window x:Class="TallerApp.Views.RegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Usuario" Height="400" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="REGISTRO DE NUEVO USUARIO" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="2" Text="Usuario:" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Name="txtUsuario" Height="25" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="5" Text="Email:" FontWeight="Bold"/>
        <TextBox Grid.Row="6" Name="txtEmail" Height="25" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="8" Text="Contraseña:" FontWeight="Bold"/>
        <PasswordBox Grid.Row="9" Name="txtPassword" Height="25" Margin="0,5,0,0"/>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnRegistrar" Content="Registrar" Width="120" Height="30" 
                    Margin="5" Click="btnRegistrar_Click"/>
            <Button Name="btnCancelar" Content="Cancelar" Width="120" Height="30" 
                    Margin="5" Click="btnCancelar_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="12" Name="lblMensaje" Foreground="Red" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>