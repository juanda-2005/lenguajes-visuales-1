<Window x:Class="TallerApp.Views.CamionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Camión" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="lblTitulo" Text="NUEVO CAMIÓN" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="2" Text="Marca:" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Name="txtMarca" Height="25" Margin="0,5,0,0" TextChanged="txtMarca_TextChanged"/>

        <TextBlock Grid.Row="5" Text="Modelo:" FontWeight="Bold"/>
        <TextBox Grid.Row="6" Name="txtModelo" Height="25" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="8" Text="Patente:" FontWeight="Bold"/>
        <TextBox Grid.Row="9" Name="txtPatente" Height="25" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="11" Text="Año:" FontWeight="Bold"/>
        <TextBox Grid.Row="12" Name="txtAño" Height="25" Margin="0,5,0,0"/>

        <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnGuardar" Content="Guardar" Width="120" Height="30" 
                    Margin="5" Click="btnGuardar_Click" Background="LightGreen"/>
            <Button Name="btnCancelar" Content="Cancelar" Width="120" Height="30" 
                    Margin="5" Click="btnCancelar_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="15" Name="lblMensaje" Foreground="Red" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>