<Window x:Class="TallerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taller App - Sistema de Gestión" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Archivo">
                <MenuItem Header="Cerrar Sesión" Click="CerrarSesion_Click"/>
                <MenuItem Header="Salir" Click="Salir_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Camiones">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Name="txtFiltroCamion" Width="200" Height="25" Margin="5"/>
                        <Button Content="Buscar" Click="BuscarCamion_Click" 
                                Width="80" Height="25" Margin="5"/>
                        <Button Content="Limpiar" Click="LimpiarFiltroCamion_Click" 
                                Width="80" Height="25" Margin="5"/>
                        <Button Content="Nuevo" Click="NuevoCamion_Click" 
                                Width="80" Height="25" Margin="20,5,5,5" Background="LightGreen"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" Name="dgCamiones" AutoGenerateColumns="False" 
                              Margin="10" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Marca" Binding="{Binding Marca}" Width="120"/>
                            <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="120"/>
                            <DataGridTextColumn Header="Patente" Binding="{Binding Patente}" Width="100"/>
                            <DataGridTextColumn Header="Año" Binding="{Binding Año}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="10">
                        <Button Content="Editar" Click="EditarCamion_Click" 
                                Width="80" Height="30" Margin="5" Background="LightBlue"/>
                        <Button Content="Eliminar" Click="EliminarCamion_Click" 
                                Width="80" Height="30" Margin="5" Background="LightCoral"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Trabajos">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Name="txtFiltroTrabajo" Width="200" Height="25" Margin="5"/>
                        <Button Content="Buscar" Click="BuscarTrabajo_Click" 
                                Width="80" Height="25" Margin="5"/>
                        <Button Content="Limpiar" Click="LimpiarFiltroTrabajo_Click" 
                                Width="80" Height="25" Margin="5"/>
                        <Button Content="Nuevo" Click="NuevoTrabajo_Click" 
                                Width="80" Height="25" Margin="20,5,5,5" Background="LightGreen"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" Name="dgTrabajos" AutoGenerateColumns="False" 
                              Margin="10" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="200"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Fecha Inicio" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Fecha Fin" Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Camión" Binding="{Binding Camion.Marca}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="10">
                        <Button Content="Editar" Click="EditarTrabajo_Click" 
                                Width="80" Height="30" Margin="5" Background="LightBlue"/>
                        <Button Content="Eliminar" Click="EliminarTrabajo_Click" 
                                Width="80" Height="30" Margin="5" Background="LightCoral"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>